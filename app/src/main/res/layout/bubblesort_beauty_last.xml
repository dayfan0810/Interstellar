<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?android:windowBackground"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100.0">

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="75.0"
            app:cardUseCompatPadding="true">

            <cn.intersteller.darkintersteller.custview.BubbleSortViewByCanvas
                android:id="@+id/sortView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="8.0dip" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="30.0">
            <Button
                android:id="@+id/bt_bubble_get_arr"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="获取随机数组"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bt_bubble_start_sort"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bt_bubble_get_arr1"
                android:text="开始排序"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>