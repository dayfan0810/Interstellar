<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/likeyoutobe_player_bottom_controler"
    android:background="@color/colorPrimaryDark"
    android:layout_width="234dp"
    android:layout_height="@dimen/sliding_up_header"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="430dp"
    android:elevation="30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/likeyoutobe_play_mode"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_play_mode"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/likeyoutobe_play_prev"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/ic_precious_song_play"
        android:scaleType="center" />

    <cn.intersteller.darkintersteller.custview.PlayPauseView
        android:id="@+id/likeyoutobe_play_pause"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginStart="13dp"
        android:background="#000000" />

    <ImageView
        android:id="@+id/likeyoutobe_play_next"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/ic_next_song_play"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/likeyoutobe_play_play_list"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic__song_play_playlist"
        android:scaleType="center" />

</LinearLayout>