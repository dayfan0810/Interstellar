<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_weight="10"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="15dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:paddingStart="10dp"
            android:id="@+id/tv_item_cloud_pan_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:textColor="#999999"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_cloud_pan_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="22dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:maxLines="2"
            android:text="半岛铁盒"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_item_cloud_pan_al_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_cloud_pan_has_mv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/iv_cloud_pan_has_mv"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_item_cloud_pan_singlesong_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:src="@drawable/iv_cloud_pan_singlesong_menu" />
</LinearLayout>