<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical"
    tools:background="@color/light_gray">

    <TextView
        android:id="@+id/tv_item_count_search_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/song_name_singer_container"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_item_count_search_result"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_item_song_name_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="17sp"
            android:maxLines="1"
            android:textColor="@color/black"
            tools:text="我的地盘" />

        <TextView
            android:id="@+id/tv_item_singer_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            tools:text="周杰伦" />

        <TextView
            android:id="@+id/tv_item_album_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:maxLines="1"
            tools:text="专辑" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_menu_search_result"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/my_playlist_opration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>