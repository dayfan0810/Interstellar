<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ContentTextView">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_color_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>
    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="SortResultChildTextView">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/grey_soild_radius_1</item>
        <item name="android:layout_width">@dimen/bubble_sort_view_child_width</item>
        <item name="android:layout_height">@dimen/bubble_sort_view_child_height</item>
    </style>
    <style name="CommonButton">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/common_btn_selector</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">15.0dip</item>
    </style>


    <style name="BubbleSortChildTextView">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dark_blue_stroke_blue_solid_radius_1</item>
        <item name="android:layout_width">@dimen/bubble_sort_view_child_width</item>
        <item name="android:layout_height">@dimen/bubble_sort_view_child_height</item>
    </style>

    <style name="ColorTranslucentTheme" parent="@style/BaseAppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ColorTranslucentTheme_Phone_worthy" parent="@style/BaseAppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MainTouming" parent="@style/BaseAppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <declare-styleable name="PlayPause">
        <attr name="isCircleDraw" format="boolean" />
        <attr name="circleAlpha" format="integer" />
        <attr name="backgroundColor" format="reference|color" />
        <attr name="drawableColor" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="Skinable">
        <!--TODO: isSupport=true标识当前控件支持换肤-->
        <attr name="isSupport" format="boolean" />
    </declare-styleable>
</resources>
